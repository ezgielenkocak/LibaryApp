@using LibaryApp.Entity.Dtos.BookDtos
@model List<AddBookDto>
@{
    ViewData["Title"] = "add page";
    Layout = "~/Views/Shared/_LayoutTemplate.cshtml";
}
<hr />
<br />
<div>
    <form class="form-group" method="post" enctype="multipart/form-data">
        <div>
            <label>Kitap Adı:</label>
            <input type="text" class="form-control" name="BookName" />
            <br /> <br />

            <label>Yazar:</label>
            <input type="text" class="form-control" name="Author" />

            <label>Kitap Resmi:</label>
            <input type="file" class="form-control-file" name="Image" />
        </div>
        <div style="margin-top:15px">
            <button type="submit" class="btn btn-info">Kitap Ekle</button>
        </div>
    </form>
</div>
