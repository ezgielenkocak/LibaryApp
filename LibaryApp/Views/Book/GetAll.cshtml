@using LibaryApp.Entity.Dtos.BookDtos
@model List<ListBookDto>
@{
    ViewData["Title"] = "GetAll";
}
<link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<style>
    .disabled-button {
        pointer-events: none; /* Butona tıklama olaylarını devre dışı bırakır */
        opacity: 0.6; /* Butonun opaklığını azaltır, tıklanamaz gibi görünmesini sağlar */
    }
</style>
<table id="bookTable" class="table">
    <thead class="thead-dark">
        <tr>
            <th></th>
            <th>Kitap</th>
            <th>Yazar</th>
            <th>Resim</th>
            <th>Durum</th>
            <th></th>
            <th>Alanın İsmi</th>
            <th>Getireceği Tarih</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var books in Model)
        {
            <tr>
                <td>@books.Number</td>
                <td>@books.BookName</td>
                <td>@books.Author</td>
                <td>
                    <img src="/wwwroot/images/@books.Image" alt="Kitap Resmi" class="img-thumbnail" />
                </td>
                <td>@books.InLibary</td>
                <td>
                    @if (books.InLibary == "Dışarıda")
                    {
                        <div>
                            @using (Html.BeginForm("AddBorrowerBook", "BorrowerBooks", FormMethod.Get))
                            {
                                @Html.Hidden("bookId", books.Id)
                                <button class="btn btn-success disabled-button" type="button">Ödünç Ver</button>
                            }
                        </div>
                    <td>Ezgi Elen Koçak</td>
                    <td>09.09.2023</td>
                    }
                    else
                    {
                    <div>
                            @using (Html.BeginForm("AddBorrowerBook", "BorrowerBooks", FormMethod.Get))
                            {
                                @Html.Hidden("bookId", books.Id)
                            <button class="btn btn-success">Ödünç Ver</button>
                            }
                    </div>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Book/Add/" class="btn btn-primary"> Kitap Ekle</a>

<script>
    $(document).ready(function () {
        $('#bookTable').DataTable({
            paging: true, // Sayfalama etkin
            searching: true // Arama özelliği etkin
        });
    });
</script>





